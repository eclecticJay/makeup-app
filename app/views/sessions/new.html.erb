<h1>Login</h1>
<%= form_tag '/login', method: :post do %>
  <div class="row">
    <div class= "col-xs-4">
      <%= label_tag :email %>
      <div>
      <%= text_field_tag :email %>
      </div>
    </div>
  </div>
  <div class="row">
      <div class= "col-xs-4">
        <%= label_tag :password %>
        <div>
        <%= password_field_tag :password %>
        </div>
      </div>
  </div>
  <%= submit_tag "Submit", :class => "btn btn-info" %>
<% end %>
