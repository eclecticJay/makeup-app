
<% if @current_artist %>
<%= form_tag "/messages", method: :post do %>
   <div><%= hidden_field_tag :makeup_artist_id, @current_artist %></div>
   <div><%= collection_select :client, :client_id,  Client.all, :id, :full_name %></div>
   <div>
    <%= text_area :text, "" %>
   </div>
   <div>
    <%= submit_tag 'Send Message!' %>
   </div>
<% end %>
<% end %>

